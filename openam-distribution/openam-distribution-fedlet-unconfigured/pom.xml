        </dependency>

        <dependency>
            <groupId>external</groupId>
            <artifactId>webservices-api</artifactId>
        </dependency>

        <dependency>
            <groupId>external</groupId>
            <artifactId>webservices-extra</artifactId>
        </dependency>

        <dependency>
