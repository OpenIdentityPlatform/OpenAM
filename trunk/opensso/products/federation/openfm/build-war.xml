        </copy>
        
        <copy todir="${war.package.dir}/WEB-INF/template/openfm">
            <fileset dir="${openfm.ldif.dir}" includes="*.ldif"/>
        </copy>

        <copy todir="${war.package.dir}/WEB-INF/lib">
