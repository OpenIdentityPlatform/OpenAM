                    <ChoiceValues>
                        <ChoiceValue i18nKey="sms">SMS</ChoiceValue>
                        <ChoiceValue i18nKey="email">E-mail</ChoiceValue>
                        <ChoiceValue i18nKey="both">SMS and E-mail</ChoiceValue>
                    </ChoiceValues>
                    <DefaultValues>
                        <Value>SMS and E-mail</Value>
                    </DefaultValues>
